ARCH = i686

MAKE = gmake
CC = clang
CFLAGS = -Wall -Werror -O2 -std=c17 \
 -march=$(ARCH) \
 -I include \
 -DUSE_VESA \
 -fno-asynchronous-unwind-tables
# -fno-stack-protector
# -fno-builtin
AS = as
ASFLAGS = -march=$(ARCH)
LD = ld
STRIP = strip -s -R .comment -R .note -R .note.ABI-tag

CSRCS = $(wildcard $(WD)/*.c)
SSRCS += $(wildcard $(WD)/*.s)
OBJS = $(patsubst %.c, %.o, $(CSRCS))
OBJS += $(patsubst %.s, %.o, $(SSRCS))

WRITER = app/tfs/writer
INITRD = initrd.img
BLKSIZE = 512

