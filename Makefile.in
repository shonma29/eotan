#		> $@; \
#		[ -s $@ ] || rm -f $@'

all: $(TARGET)

-include $(CSRCS:.c=.d)

.PHONY: clean
clean:
	$(RM) $(TARGET) $(OBJS) $(CSRCS:.c=.d)
